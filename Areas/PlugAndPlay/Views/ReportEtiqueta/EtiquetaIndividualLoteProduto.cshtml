@{
    Layout = null;
    dynamic listaEtiquetas = ViewData["ListaEtiquetas"] as System.Collections.Generic.List<string>;
}

<!DOCTYPE html>
<html>
<head>

    <style>
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 5px;
            text-align: left;
        }

        .tabela {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .element_first {
            width: 15%;
            background-color: blue;
        }

        .element_last {
            width: 15%;
            background-color: red;
        }

        .element_midle {
            background-color: green;
            width: 50%;
        }

        #corpo {
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        h4 {
            margin: 0;
            padding: 0;
            margin-top: -5px;
        }

        p {
            margin: 0;
        }


        .centralizar {
            display: flex;
            color: black;
            text-align: center;
            justify-content: center;
            width: 100%;
            background-color: #333;
            height: 50vh;
        }
        /*Primeira tabela*/

        .primeiraTabelaTd {
            height: 55px;
        }

        /*Segunda tabela*/
        .segundaTabelaTd {
            height: 45px;
        }

        .segundaTabelaH4 {
            margin-top: -5px;
        }

        .TabelaH4 {
            margin-top: auto;
        }

        segundaTabelaP {
            margin-top: 35px;
        }
    </style>
</head>

<body id="corpo">
    
    @{
        int count = 0;
    }

    @foreach (dynamic etiqueta in listaEtiquetas)
    {
        <div class="centralizar">
            <div style=" width:15%; height:40vh; float:left; margin-top:50px;">
                <p><b>DOBRE</b></p>
                <p><b>AQUI</b></p>
                <img width="100" height="110" src="~/images/setabaixo.png">
            </div>
            <div style=" width:70%; height:40vh;float:left;"><img src="~/images/logo/logo.jpg"></div>
            <div style=" width:15%; height:40vh; float:left; margin-top:50px;">
                <p><b>DOBRE</b></p>
                <p><b>AQUI</b></p>
                <img width="100" height="110" src="~/images/setabaixo.png">
            </div>
        </div>

        <p style=" margin-top: 0px; margin-left: -15px;">----------------------------------------------------------------------------------------------------------------------------------------------------------</p>

        @Html.Raw(etiqueta);

        @if (++count < listaEtiquetas.Count)
        {
            <p style="page-break-after: always;"></p>
        }
    }
</body>

</html>