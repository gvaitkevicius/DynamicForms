@model IEnumerable<DynamicForms.Areas.SGI.Model.T_PlanoAcao>
@{
    ViewData["Title"] = "Planos de Ação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class='col-xs-12'>
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">@ViewData["Title"]</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home", new { area = "sgi" })"><i class="fa fa-home"></i>Home</a>
                </li>
                <li class="active">
                    <strong>Planos de ação</strong>
                </li>
            </ol>
        </div>

    </div>
</div>

<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Planos de ações</h2>
            <div class="actions panel_actions pull-right">
            </div>
        </header>
        <div class="content-body">
            <div class="btn-toolbar">
                @using (Html.BeginForm("Index", "Metas", FormMethod.Get, new { area = "sgi" }))
                {
                    <div class="btn-group focus-btn-group">
                        <a href="@Url.Action("AddPlano", "PlanoAcao", new { area = "sgi", idIndicador = Html.Value("idIndicador"), periodo = Html.Value("periodo") })"  title="Incluir plano de ação" class="btn btn-success">
                            <span class="fa fa-plus"></span> Incliur
                        </a>
                        <a href="@Url.Action("Index","Home", new { area = "sgi" })" title="Voltar" class="btn btn-default">
                            <span class="fa fa-mail-reply"></span> Voltar
                        </a>
                    </div>
                    <div class="btn-group dropdown-btn-group pull-right">

                    </div>
                }
            </div>

            <div class="table-responsive">
                <table class="table table-striped dt-responsive display">
                    <thead>
                        <tr>
                            <th>Período</th>
                            <th>Indicador</th>
                            <th>Ação</th>
                            <th>Alvo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PLA_REFERENCIA</td>
                                <td>@item.T_Metas.T_Indicadores.IND_DESCRICAO</td>
                                <td>@item.PLA_DESCRICAO</td>
                                <td>@item.T_Metas.MET_ALVO</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.PLA_ID})" class="btn btn-warning " title="Editar"  data-modal=""><span class="fa fa-edit"></span></a>
                                    <a href="@Url.Action("Delete", new { id = item.PLA_ID})" class="btn btn-danger " title="Deletar"  data-modal=""><span class="fa fa-eraser"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<!-- modal placeholder-->
<div id='myModal' class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section Styles {

    <link href="~/css/PainelGestor/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
}

@section Scripts {

    <script src="~/Functions/Script/PainelGestor/autosize.js" type="text/javascript"></script>
    <script src="~/Functions/Script/PainelGestor/icheck.js" type="text/javascript"></script>
    <script src="~/Functions/Script/modalform.js" type="text/javascript"></script>

}

